<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMascotas.MainPage">
    

    <StackLayout Margin="30" Spacing="30">
        <Frame BackgroundColor="#27B2B0" Padding="24"  CornerRadius="1">

            <Label Text="Login" FontAttributes="Bold" FontFamily="Lobster" HorizontalTextAlignment="Center" TextColor="White" FontSize="46"/>
        </Frame>
        <Image  HeightRequest="100" Source="/drawable/login.png" />
        <StackLayout>
        <Grid>
            <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"  />
                </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="45"/>
                <ColumnDefinition  Width="50"/>
            </Grid.ColumnDefinitions>            
           
        </Grid>
        </StackLayout>
    
        <Entry x:Name="usuario" Grid.Row="0" Grid.Column="0"   Placeholder="Usuario" Keyboard="Text" />

        <Entry x:Name="contrasenia"  Grid.Row="1" Grid.Column="0"  Placeholder="Contraseña" Keyboard="Text" />
        <Button x:Name="irprincipal" Text="Siguiente" Clicked="siguiente" Grid.Row="5" Grid.ColumnSpan="3" CornerRadius="25" 
                TextColor="White" BackgroundColor="#00AE0C"/>
    </StackLayout>

</ContentPage>

          